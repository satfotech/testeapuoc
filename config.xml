<?xml version='1.0' encoding='utf-8'?>
<widget id="com.getyardstick.EAPUOC" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EAPUOC eManual</name>
    <description>
        EAPUOC Electronic Manual
    </description>
    <author email="joannec@getyardstick.com" href="http://www.getyardstick.com">
        Yardstick Software
    </author>
    <splash height="480" platform="ios" src="www/img/EAPUOC-splash.jpg" width="320" />
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-navigation href="http://www.eapuoc.com/*" />
    <allow-navigation href="http://www.aer.ca/*" />
    <allow-navigation href="www.neb-one.gc.ca/*" />
    <allow-navigation href="www.neb-one.gc.ca/*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="16" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="*" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <engine name="ios" spec="^4.5.3" />
    <engine name="android" spec="^6.3.0" />
    <engine name="browser" spec="^5.0.1" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
</widget>
